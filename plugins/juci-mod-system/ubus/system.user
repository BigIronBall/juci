#!/usr/bin/lua

require("JUCI"); 

function user_password(opts)
	if not opts["password"] then return 5; end
	local stdout = juci.shell("echo -e \"%s\" | passwd admin", opts["password"].."\\n"..opts["password"]); 
	print(json.encode({
		["stdout"] = stdout
	})); 
end

juci.ubus({
	["password"] = user_password
}, arg); 
